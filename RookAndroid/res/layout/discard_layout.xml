            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:src="@drawable/rook"  
            android:clickable="true"
            android:onClick="cardClick" />
            
        <ImageView
            android:id="@+id/card9"
            android:layout_width="wrap_content"
