<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="menu_button" >
        <item name="android:layout_width">@dimen/menu_button_width</item>
		<item name="android:layout_height">@dimen/menu_button_height</item>
		<item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/menu_button_text_color</item>
		<item name="android:textSize">@dimen/menu_button_text_size</item>
		<item name="android:background">@layout/button_shape</item>
		<item name="android:shadowColor">@color/menu_button_shadow_color</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">0</item>
		<item name="android:shadowRadius">5</item>
		<item name="android:textStyle">bold</item>
    </style>

</resources>
